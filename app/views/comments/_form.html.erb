<div class="panel panel-primary">
  <div class="panel-heading">Post a comments</div>

  <div class="panel-body">
  	
		<%= form_for [@article, @comment] do |f| %>

			<p>
				<%= f.label :author_name, "Your name" %>
				<%= f.text_field :author_name %>
			</p>

			<p>
				<%= f.label :body, "Your comment" %>
				<%= f.text_area :body %>
			</p>

			<p>
				<%= f.submit 'Submit'%>
			</p>

		<% end %>
  </div>
</div>






